{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (MinGW)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build (MinGW)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Full Build (MinGW)",
            "dependsOn": [
                "CMake Configure (MinGW)",
                "CMake Build (MinGW)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}